{
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Ctrl+i → Volume Up, Ctrl+u → Volume Down, Ctrl+t → Play/Pause",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "i",
                                    "modifiers": {
                                        "mandatory": ["control"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "consumer_key_code": "volume_increment" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "u",
                                    "modifiers": {
                                        "mandatory": ["control"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "consumer_key_code": "volume_decrement" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "t",
                                    "modifiers": {
                                        "mandatory": ["control"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "consumer_key_code": "play_or_pause" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Cmd+Enter to open WezTerm",
                        "enabled": false,
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "return_or_enter",
                                    "modifiers": {
                                        "mandatory": ["left_command"],
                                        "optional": ["any"]
                                    }
                                },
                                "to": [{ "shell_command": "open -a wezterm" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Caps Lock to Escape on single press, Ctrls on press and hold.",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "caps_lock",
                                    "modifiers": { "optional": ["any"] }
                                },
                                "to": [
                                    {
                                        "hold_down_milliseconds": 100,
                                        "key_code": "left_control"
                                    }
                                ],
                                "to_if_alone": [{ "key_code": "escape" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        }
    ]
}