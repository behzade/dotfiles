# General settings
set icons true
set reverse true
set shell fish
set ignorecase true

set previewer previewer.sh
set cleaner cleaner.sh

set sortby time
set info time:size

cmd mkdir ${{
    printf "Dir Name: "
    read ans
    mkdir $ans
}}

cmd mkfile ${{
    printf "File Name: "
    read ans
    touch $ans
}}

cmd unarchive ${{
    case "$f" in
        *.zip) unzip "$f" ;;
        *.tar.gz) tar -xzvf "$f" ;;
        *.tar.bz2) tar -xjvf "$f" ;;
        *.tar) tar -xvf "$f" ;;
        *) echo "Unsupported archive" ;;
}}



# Unmap default bindings
map m
map d
map n

# Custom commands
cmd drag %dragon-drop -a $fx
cmd trash %trash-put $fx

# Mappings
map <enter> open
map m cut
map dd trash

map o mkfile
map O mkdir
